@model IEnumerable<CartItem>

<h2 class="mt-3"><i class="fas fa-list-ul"></i> Your Cart</h2>
@if(Model.Count() == 0) {
  <p>Your cart is empty</p>
} else {
   @foreach (CartItem c in Model)
    {        
        <div class="row">
          <div class="col col-xs-5 pt-2" id="ProductName">@c.Product.ProductName</div>
          <div class="col col-xs-2 pt-2 text-right">
            $<span id="UnitPrice">@c.Product.UnitPrice</span>
          </div>
          <div class="col col-xs-1">
            @c.Quantity
          </div>
        </div>
        <a class="btn btn-primary" asp-action="remove" asp-route-id="@c.CartItemId" role="button">Remove</a>
    }
  <hr />
  <form method="POST" asp-controller="Cart" asp-action="Checkout">
    <button type="submit" class="align-self-end btn btn-lg btn-primary" style="margin-top: auto;">Checkout</button>
  </form>
}
    
