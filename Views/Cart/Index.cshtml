@model IEnumerable<CartItem>

<h2 class="mt-3"><i class="list-group list-group-flush"></i> Your Cart</h2>

@if(Model.Count() == 0) {
  <p>Your cart is empty</p>
} else {
  <div style="display:none;" id="ProductId"></div>
      <div class="row">
          <div class="col col-xs-5"><strong>Product</strong></div>
          <div class="col col-xs-2 text-right"><strong>Price</strong></div>
          <div class="col col-xs-2"><strong>Quantity</strong></div>
      </div>
   @foreach (CartItem c in Model)
    {        
      
        <div class="row" style="font-size: large;">
          <div class="col col-xs-4 pt-2" id="ProductName">@c.Product.ProductName</div>
          <div class="col col-xs-2 pt-2 text-right">
            <span id="UnitPrice">@c.Product.UnitPrice.ToString("C")</span>
          </div>
          <div class="col col-xs-1">
            &nbsp;&nbsp;&nbsp;@c.Quantity
          </div>
        </div>
        <a class=" btn-secondary btn-" asp-action="remove" asp-route-id="@c.CartItemId" role="button">Remove</a>
        
    }
  <hr />
  <form method="POST" asp-controller="Cart" asp-action="Checkout">
    <button type="submit" class="align-self-end btn btn-sm btn-primary" style="margin-top: auto;">Checkout</button>
  </form>
}
    